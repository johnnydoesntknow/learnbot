{
  "name": "iopn-learn-backend",
  "version": "1.1.0",
  "description": "IOPn Learn Platform Backend with Database Integration",
  "main": "api/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon api/server.js",
    "start": "node api/server.js",
    "bot": "node bot/index.js",
    "bot:dev": "nodemon bot/index.js",
    "db:setup": "node scripts/setup-database.js",
    "db:reset": "node scripts/reset-database.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "discord.js": "14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "redis": "^4.6.11",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "config/**/*.js",
      "!api/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iopn/learn-platform"
  },
  "keywords": [
    "iopn",
    "blockchain",
    "education",
    "discord",
    "learning",
    "quiz",
    "web3"
  ],
  "author": "IOPn Team",
  "bugs": {
    "url": "https://github.com/iopn/learn-platform/issues"
  },
  "homepage": "https://iopn.io"
}